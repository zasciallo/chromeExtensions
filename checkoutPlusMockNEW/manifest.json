{
	"name": "Checkout+ Button Injector",
	"manifest_version": 3,
	"version": "0.3",
	"description": "Replaces the Shopify checkout button with a Checkout+ widget.",
	"action": {
		"default_title": "Open Checkout Plus"
	},
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"background": {
		"service_worker": "service-worker.js"
	},
	"permissions": ["sidePanel", "activeTab", "tabs", "storage", "scripting"],
	"host_permissions": ["https://*/*", "http://*/*"],
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": ["content-script.js", "sidepanel.js", "content-styles.js", "content-picker.js", "content-remove.js"],
			"run_at": "document_end"
		}
	]
}
